process {

    // error strategy
    errorStrategy = { task.attempt < 3 ? 'retry' : 'finish' }
    maxRetries = 3

    // basic resources
    cpus = 1
    time = { 1.h * task.attempt }
    memory = { 1.GB * task.attempt }

    // process-specific resources
    withName: BOWTIE2_BUILD_INDEX {
        cpus = 10
    }
    withName: STAR_GENOMEGENERATE {
        cpus   = { 12    * task.attempt }
        memory = { 72.GB * task.attempt }
        time   = { 16.h  * task.attempt }
    }
    withName: BOWTIE2_ALIGN {
        cpus = 10
        memory = { 32.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    withName: STAR_ALIGN {
        cpus = 10
        memory = { 64.GB * task.attempt }
        time = { 10.h * task.attempt }
    }
    withName: TRIMGALORE {
        cpus = 10
        memory = { 16.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    withName: FASTQC {
        cpus = 10
        memory = { 16.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    withName: TRIM_DPM {
        cpus = 10
        memory = { 16.GB * task.attempt }
        time = { 8.h * task.attempt }
    }
    withName: EXTRACT_BCS {
        cpus = 10
        memory = { 16.GB * task.attempt }
        time = { 12.h * task.attempt }
    }
    withName: SPLIT_RPM_DPM {
        cpus = 2
        memory = { 4.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: FILTER_ALIGNMENTS_RPM {
        memory = { 32.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: FILTER_MASKED_REGIONS_RPM {
        memory = { 32.GB * task.attempt }
        time = { 2.h * task.attempt }
    }
    withName: FILTER_ALIGNMENTS_DPM {
        memory = { 32.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: FILTER_MASKED_REGIONS_DPM {
        memory = { 32.GB * task.attempt }
        time = { 2.h * task.attempt }
    }
    withName: MAKE_CLUSTER_PAIRS {
        memory = { 64.GB * task.attempt }
        time = { 4.h * task.attempt }
    }
    withName: SORT_BED {
        memory = { 32.GB * task.attempt }
        time = { 1.h * task.attempt }
    }
    withName: MAKE_PAIRIX {
        memory = { 32.GB * task.attempt }
        time = { 4.h * task.attempt }        
    }
    withName: CLUSTER_BASE_COOLERS {
        memory = { 32.GB * task.attempt }
        time = { 4.h * task.attempt }             
    }
    withName: MERGE_CLUSTER_COOLERS {
        memory = { 64.GB * task.attempt }
        time = { 8.h * task.attempt }          
    }
    withName: MERGE_REPLICATE_COOLERS {
        cpus = 10
        memory = { 64.GB * task.attempt }
        time = { 8.h * task.attempt }            
    }
    withName: ZOOMIFY_COOLER {
        cpus = 10
        memory = { 64.GB * task.attempt }
        time = { 8.h * task.attempt }    
    }
    withName: BALANCE_MCOOL {
        cpus = 10
        memory = { 200.GB * task.attempt }
        time = { 8.h * task.attempt }    
    }
    withName: ANNOTATE_COOLERS {
        memory = { 32.GB * task.attempt }
        time = { 10.h * task.attempt }    
    }
}

timeline {
	enabled = true
}

report {
	enabled = true
}